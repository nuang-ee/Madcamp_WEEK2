<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@drawable/bg_gradient"-->



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!--        android:layout_marginBottom="55dp"-->


        <TextView
            android:id="@+id/customClaimeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_tab_claimees"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/claimeeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="230sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customClaimeeText" />

        <TextView
            android:id="@+id/customClaimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/custom_tab_claimers"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claimeeRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/claimerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="230sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customClaimerText" />

        <Button
            android:id="@+id/claimee_button"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginEnd="16dp"
            android:text="빚쟁이 추가"
            app:layout_constraintBottom_toTopOf="@+id/claimeeRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/claimer_button"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginEnd="16dp"
            android:text="빚 추가"
            app:layout_constraintBottom_toTopOf="@+id/claimerRecyclerView"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>